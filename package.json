{
	"name": "NodeJS TypeScript Starter",
	"version": "1.0.0",
	"description": "A Simple and Minimal NodeJS Typescript Starter",
	"main": "index.js",
	"scripts": {
		"start": "npm run serve",
		"build": "npm run build-ts && npm run tslint",
		"serve": "node dist/server.js",
		"watch:node": "nodemon dist/server.js",
		"build:ts": "tsc",
		"watch:ts": "tsc -w",
		"tslint": "tslint -c tslint.json -p tsconfig.json",
		"tslint:fix": "tslint -p tslint.json -f",
		"prettier": "prettier --write \"{,!(node_modules|dist|build|coverage)/**/}*.{js,jsx,ts,tsx,json}\""
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"express": "^4.17.1"
	},
	"devDependencies": {
		"@types/express": "^4.17.0",
		"@types/node": "^12.0.10",
		"husky": "^2.7.0",
		"nodemon": "^1.19.1",
		"prettier": "^1.18.2",
		"ts-node": "^8.3.0",
		"tslint": "^5.18.0",
		"tslint-config-prettier": "^1.18.0",
		"typescript": "^3.5.2"
	},
	"husky": {
		"pre-commit": "npm run tslint && npm run prettier"
	}
}
