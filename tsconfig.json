{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"target": "es6",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"*": ["./node_modules/*", "./*"],
			"@controllers/*": ["./src/controllers/*"],
			"@models/*": ["./src/models/*"],
			"@utils/*": ["./src/utils/*"]
		}
	},
	"include": ["src/**/*"]
}
